puts "Please enter your name: "

name = gets

puts "assignment: "

assignment = gets

puts "Thank you. Please enter the grade you wish to convert into a letter: "

gradeStr = gets

grades = ["A", "B", "C", "D", "F", "INVALID GRADE"]

grade = Integer(gradeStr)

if grade <= 100 && grade >=90
    puts name + ", your letter grade for " + assignment + " is " + grades[0]
elsif grade <= 89 && grade >= 80
    puts name + ", your letter grade for " + assignment + " is " + grades[1]
elsif grade <= 79 && grade >= 70
    puts name + ", your letter grade for " + assignment + " is " + grades[2]
elsif grade <= 69 && grade >= 60
    puts name + ", your letter grade for " + assignment + " is " + grades[3]
elsif grade <= 59 && grade >= 0
    puts name + ", your letter grade for " + assignment + " is " + grades[4]
else
    puts grades[5]
end